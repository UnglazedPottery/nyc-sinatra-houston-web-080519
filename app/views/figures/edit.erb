<h2>Edit Figure: <%= @figure.name %></h2>

<form method="post" action="/figures/<%= @figure.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch"/>

    <label><strong>Name:</strong></label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br><br>

  <label><strong>Title(s):</strong></label><br>
  <em>Choose from an Existing Title</em><br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
    <%= title.name %>
    <br>
  <% end %><br>
  <em>and/or Create a New Title:</em><br>
  <label>Title:</label><input type="text" name="title[name]" id="new_title">
  <br><br>

  <label><strong>Landmark(s):</strong></label><br>
  <em>Choose from an Existing Landmark</em><br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
    <%= landmark.name %>
    <br>
  <% end %><br>
  <em>and/or Create a New Landmark:</em>><br>
  <label for="new_landmark">Name:</label>
    <input type="text" id="new_landmark" name="landmark[name]"/><br>
    <label for="year">Year:</label>
    <input type="text" id="year" name="landmark[year_completed]"/><br><br>

  <input type="submit" value="Edit Figure">

</form>